<h3>Doctor Show</h3>

<label>Name:</label>
<%= @doctor.name %><br>

<label>Department: </label>
<%= @doctor.department %><br><br>

<% @doctor.appointments.each do |appointment| %>
  <label>Appointment Time: </label>
  <%= appointment.appointment_datetime.strftime("%B %e, %Y at %H:%M") %><br>
  <label>Patient Name: </label>
  <%= link_to appointment.patient.name, patient_path(appointment.patient) %><br><br>
<% end %>
